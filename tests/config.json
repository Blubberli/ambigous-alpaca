
{ "train_data_path": "../tests/data_binary_classification/train.txt",
  "validation_data_path": "../tests/data_binary_classification/val.txt",
  "test_data_path": "../tests/data_binary_classification/test.txt",
  "logging_path": "logger",
  "save_name" : "test_runs_",
  "model_path" : "trained_models",
  "eval_on_test" : true,

  "model": {
    "type": "transweigh_twoword",
    "classification": "binary",
    "dropout": 0.2,
    "input_dim" : 300,
    "hidden_size": 200,
    "label_size" : 1,
    "activation": "relu",
    "transformations" : 100,
    "normalize_embeddings" : false
  },
  "feature_extractor": {
    "contextualized_embeddings": false,
    "static_embeddings": true,
    "contextualized": {
      "bert": {
        "model" : "bert-base-german-cased",
        "max_sent_len" : 200,
        "lower_case" : false,
        "batch_size" : 100
      }
    },

    "static": {
      "type": "structgram",
      "pretrained_model": "../tests/embeddings/german-structgram-mincount-30-ctx-10-dims-300.fifu"

    },
    "context": false,
    "sentence_pooling": "mean"
  },
  "sequence" : {
    "tokenizer" : "de_CMC"
  },
  "iterator": {
    "type": "basic",
    "batch_size": 64
  },
  "trainer": {
    "optimizer": {
      "type": "adam",
      "lr": 0.001
    }
  },
  "validation_metric": "accuracy",
  "num_serialized_models_to_keep": 3,
  "num_epochs": 75,
  "patience": 5,
  "cuda_device": 0,
  "seed" :  1}